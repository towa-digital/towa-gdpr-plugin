# This file is for unifying the coding style for different editors and IDEs
# editorconfig.org

# WordPress Coding Standards
# http://make.wordpress.org/core/handbook/coding-standards/

root = true

[*]
charset = utf-8
end_of_line = LF
insert_final_newline = true
trim_trailing_whitespace = true


[*.yml]
indent_style = space
indent_size = 2


[*.{php,html,twig}]
indent_style = space
indent_size = 4
max_line_length = 120
end_of_line = lf

[*.md]
max_line_length = 80
trim_trailing_whitespace = false

[COMMIT_EDITMSG]
max_line_length = 0

[*.js]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

[*.txt]
end_of_line = crlf
